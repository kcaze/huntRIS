{
	"manifest_version" : 3,
	
	"name" : "huntRIS",
	"description" : "Reverse image search extension designed for use in puzzle hunts.",
	"version" : "1.0",
	
  "permissions" : [
    "notifications", "tabs", "contextMenus", "<all_urls>"
  ],

  "background" : {
    "page" : "main/background.html",
    "persistent" : false
  },

  "commands" : {
    "screenshot" : {
      "suggested_key" : {
        "default" : "Ctrl+Insert",
        "windows" : "Ctrl+Insert"
      },
      "description" : "Shortcut for screenshotting."
    }
  }
}
