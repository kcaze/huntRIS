{
	"manifest_version" : 2,
	
	"name" : "huntRIS (Reverse Image Search)",
	"version" : "1.1",

	"description" : "Find where an image came from. Press Ctrl+Ins to screenshot and search a portion of the page.",
  "icons" : {
    "16" : "images/icon16.png",
    "48" : "images/icon48.png",
    "128" : "images/icon128.png"
  },

  "permissions" : [
    "notifications", "tabs", "contextMenus", "<all_urls>"
  ],

  "background" : {
    "page" : "main/background.html",
    "persistent" : false
  },

  "commands" : {
    "screenshot" : {
      "suggested_key" : {
        "default" : "Ctrl+Insert",
        "windows" : "Ctrl+Insert"
      },
      "description" : "Shortcut for screenshotting."
    }
  }
}
